{
  "variables": {
    "client_id": "{{ env `ARM_CLIENT_ID` }}",
    "client_secret": "{{env `ARM_CLIENT_SECRET` }}",
    "tenant_id": "{{env `ARM_TENANT_ID`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "SAS_URL": "{{env `SAS_URL`}}"
  },
  "builders": [
    {
      "type": "azure-arm",

      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "subscription_id": "{{user `subscription_id`}}",
      "tenant_id": "{{user `tenant_id`}}",

      "managed_image_name": "hpcfvcom",
      "managed_image_resource_group_name": "packer-hpc-rg",

      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "18.04-LTS",
      
      "location": "East US",
      "vm_size": "Standard_F64s_v2",
      "os_disk_size_gb": 32
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./packer-ubuntu.sh",
      "valid_exit_codes": [0, 1],
      "timeout": "30m",
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "script": "./packer-nettune.sh"
    },
    {
      "type": "shell",
      "script": "./packer-infiniband.sh"
    },
    {
      "type": "shell",
      "environment_vars": [
        "SAS_URL={{user `SAS_URL`}}"
      ],
      "script": "./packer-fvcom.sh",
      "timeout": "20m"
    }
  ]
}
